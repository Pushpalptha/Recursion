def reverse(string):
    if len(string) == 0:
        return string
    else:
        return reverse(string[1:]) + string[0]


reverseme = 'Desserts'
print(reverse(reverseme))

reverseme = 'Knits'
print(reverse(reverseme))

reverseme = 'Regal'
print(reverse(reverseme))

reverseme = 'Pupils'
print(reverse(reverseme))

reverseme = 'Smart'
print(reverse(reverseme))

reverseme = 'Pals'
print(reverse(reverseme))

reverseme = 'Straw'
print(reverse(reverseme))

reverseme = 'Time'
print(reverse(reverseme))

reverseme = 'Star'
print(reverse(reverseme))
